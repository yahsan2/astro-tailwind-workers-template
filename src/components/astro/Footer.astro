---
import { Instagram, Facebook, Twitter } from 'lucide-react';
---

<footer class="footer footer-center p-10 bg-base-200 text-base-content">
  <nav aria-label="フッターナビゲーション">
    <div class="grid grid-flow-col gap-4">
      <a href="/lessons" class="link link-hover" aria-label="レッスン情報">レッスン</a>
      <a href="/schedule" class="link link-hover" aria-label="スケジュール">スケジュール</a>
      <a href="/instructors" class="link link-hover" aria-label="インストラクター">インストラクター</a>
      <a href="/pricing" class="link link-hover" aria-label="料金プラン">料金</a>
      <a href="/access" class="link link-hover" aria-label="アクセス">アクセス</a>
      <a href="/contact" class="link link-hover" aria-label="お問い合わせ">お問い合わせ</a>
    </div>
  </nav>

  <nav aria-label="ソーシャルメディア">
    <div class="grid grid-flow-col gap-4">
      <a
        href="https://instagram.com"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-ghost btn-circle"
        aria-label="Instagram"
      >
        <Instagram className="w-6 h-6" aria-hidden="true" />
      </a>
      <a
        href="https://facebook.com"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-ghost btn-circle"
        aria-label="Facebook"
      >
        <Facebook className="w-6 h-6" aria-hidden="true" />
      </a>
      <a
        href="https://twitter.com"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-ghost btn-circle"
        aria-label="Twitter"
      >
        <Twitter className="w-6 h-6" aria-hidden="true" />
      </a>
    </div>
  </nav>

  <aside>
    <p class="text-sm">
      Copyright © {new Date().getFullYear()} - Yoga Studio Sample Site
    </p>
  </aside>
</footer>
