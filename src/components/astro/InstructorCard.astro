---
import { Image } from 'astro:assets';
import type { Instructor } from '../../types';
import { Instagram, Twitter, Facebook } from 'lucide-react';

interface Props {
  instructor: Instructor;
}

const { instructor } = Astro.props;
---

<article class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow duration-300">
  <figure class="relative aspect-[3/4] overflow-hidden">
    <Image
      src={instructor.photoUrl}
      alt={`${instructor.name}のプロフィール写真`}
      width={400}
      height={533}
      class="object-cover w-full h-full"
      loading="lazy"
    />
  </figure>

  <div class="card-body">
    <h3 class="card-title text-xl font-bold text-neutral">
      {instructor.name}
    </h3>

    <p class="text-sm text-base-content/70 line-clamp-3 mb-2">
      {instructor.bio}
    </p>

    <div class="mb-3">
      <h4 class="text-xs font-semibold text-neutral mb-1">担当クラス</h4>
      <div class="flex flex-wrap gap-1">
        {instructor.classes.map((classId) => (
          <span class="badge badge-sm badge-outline badge-primary">
            {classId}
          </span>
        ))}
      </div>
    </div>

    {instructor.socialLinks && (
      <div class="flex gap-3 mb-3">
        {instructor.socialLinks.instagram && (
          <a
            href={instructor.socialLinks.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="text-base-content/60 hover:text-primary transition-colors"
            aria-label={`${instructor.name}のInstagram`}
          >
            <Instagram className="w-5 h-5" />
          </a>
        )}
        {instructor.socialLinks.twitter && (
          <a
            href={instructor.socialLinks.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="text-base-content/60 hover:text-primary transition-colors"
            aria-label={`${instructor.name}のTwitter`}
          >
            <Twitter className="w-5 h-5" />
          </a>
        )}
        {instructor.socialLinks.facebook && (
          <a
            href={instructor.socialLinks.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="text-base-content/60 hover:text-primary transition-colors"
            aria-label={`${instructor.name}のFacebook`}
          >
            <Facebook className="w-5 h-5" />
          </a>
        )}
      </div>
    )}

    <div class="card-actions justify-end">
      <a
        href={`/instructors/${instructor.id}`}
        class="btn btn-primary btn-sm"
      >
        詳しく見る
      </a>
    </div>
  </div>
</article>
