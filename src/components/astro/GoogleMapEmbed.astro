---
interface Props {
  embedUrl: string;
  className?: string;
}

const { embedUrl, className = '' } = Astro.props;
---

<div class={`relative w-full aspect-video rounded-lg overflow-hidden ${className}`}>
  <iframe
    src={embedUrl}
    class="absolute inset-0 w-full h-full border-0"
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    allowfullscreen
    title="スタジオの地図"
    aria-label="Google Maps - スタジオの場所を表示"
  ></iframe>
</div>
